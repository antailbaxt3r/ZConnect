<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zconnect.zutto.zconnect.addActivities.AddInfoneCat"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Create an Infone category"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        android:gravity="center_horizontal"/>
    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:id="@+id/image_add_cat_infone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_dashed_border"
        android:layout_gravity="center_horizontal"
        fresco:actualImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        fresco:roundingBorderPadding="2dp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_name_cat_add_infone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="category name"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/save_image_add_cat_infone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@color/infone"
        android:textAllCaps="false"/>

</LinearLayout>
