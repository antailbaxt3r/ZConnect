<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zconnect.zutto.zconnect.InfoneProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_app_bar_home"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_profile_infone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_name_infone_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:padding="10dp"
            android:text="name" />

        <EditText
            android:id="@+id/et_phone1_infone_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="10dp"
            android:text="phone1" />

        <EditText
            android:id="@+id/et_phone2_infone_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="10dp"
            android:text="phone2" />

        <Button
            android:id="@+id/save_edit_infone_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"/>

        <Button
            android:id="@+id/valid_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valid" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last verified on" />

        <TextView
            android:id="@+id/verified_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verified Date" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
