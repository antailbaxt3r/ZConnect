<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context="com.zconnect.zutto.zconnect.InfoneProfileActivity"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">


<LinearLayout
android:layout_width="match_parent"
tools:context="com.zconnect.zutto.zconnect.InfoneProfileActivity"
android:layout_height="match_parent"
android:background="#F8F8F8"
android:id="@+id/infone_profile_linear_layout"
android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_app_bar_home"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="405dp">

        <LinearLayout
            android:background="@drawable/gradient"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">
            <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_profile_infone"
                android:layout_marginTop="45dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/profile_avatar_circle"
                fresco:actualImageScaleType="centerCrop"
                fresco:roundAsCircle="true"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:id="@+id/et_name_infone_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:gravity="center_horizontal"
                android:text="Anshuman"
                android:textSize="26sp"
                app:met_textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_desc_infone_profile"
                android:text="This is where my about/Bio goes."
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/valid_label"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/verified_date"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_email_black_24dp"/>
            <TextView
                android:id="@+id/contact_details_email_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:paddingLeft="20dp"
                android:text="anshumansingh64@gmail.com"
                android:layout_gravity="center_vertical"
                android:focusableInTouchMode="false"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/phone1ll"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_phone"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_phone1_infone_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="9844381031"
                android:ems="10"
                android:maxLength="10"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                app:met_textColor="@color/primaryText" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/whatsappll"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/whatsapp_64px"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_phone2_infone_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="9844381031"
                android:ems="10"
                android:maxLength="10"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                app:met_textColor="@color/primaryText" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/valid_button"
        android:textColor="#fff"
        android:background="@drawable/gradient"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validate"/>


    <Button
        android:id="@+id/viewProfileButton"
        android:textColor="#fff"
        android:background="@drawable/gradient"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Profile"/>

    </LinearLayout>


</LinearLayout>


    <ProgressBar
        android:id="@+id/infone_profile_progress_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/secondaryText2"
        android:backgroundTintMode="src_atop"
        android:visibility="gone"
        android:layout_centerInParent="true"/>
</RelativeLayout>



