<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zconnect.zutto.zconnect.CommunitiesAround"
    tools:showIn="@layout/activity_communities_around">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/all_communities"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/turn_on_gps"
                android:background="@drawable/round_button_simple"
               android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:textColor="@color/colorPrimary"
                style="?android:attr/borderlessButtonStyle"
                android:paddingStart="@dimen/button_padding_start_end"
                android:paddingEnd="@dimen/button_padding_start_end"
                android:text="Turn on GPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/no_communities_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:clickable="false"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:text="No communities found in your area \n"/>

                <TextView
                    android:id="@+id/text2"
                    android:paddingLeft="36sp"
                    android:paddingRight="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:text="Tap to start a new communtiy in your area"/>

            </LinearLayout>


        </RelativeLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
