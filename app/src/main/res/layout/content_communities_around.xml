<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zconnect.zutto.zconnect.CommunitiesAround"
    tools:showIn="@layout/activity_communities_around">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/all_communities"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->

        <!--</android.support.v7.widget.RecyclerView>-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/communities_container"></android.support.v4.view.ViewPager>



            <Button
                android:id="@+id/turn_on_gps"
                android:background="@drawable/round_button_simple"
               android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:textColor="@color/deepPurple500"
                style="?android:attr/borderlessButtonStyle"
                android:paddingStart="@dimen/button_padding_start_end"
                android:paddingEnd="@dimen/button_padding_start_end"
                android:text="Turn on GPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </FrameLayout>

</android.support.constraint.ConstraintLayout>
