<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zconnect.zutto.zconnect.CommunitiesAround"
    tools:showIn="@layout/activity_communities_around">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/no_community"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="75dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:visibility="gone"
                android:text="Sorry, no ZConnect communities in your 2km radius | Will be launching soon"/>

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/all_communities"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>


    </FrameLayout>

</android.support.constraint.ConstraintLayout>
