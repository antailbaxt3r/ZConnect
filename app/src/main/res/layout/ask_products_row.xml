<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="1dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/postImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:transitionName="@string/transition_string" />
                    <TextView
                        android:id="@+id/ask_text_products_row"
                        android:layout_width="wrap_content"
                        android:maxWidth="120dp"
                        android:layout_height="wrap_content"
                        android:text="ASK"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:textSize="20sp"
                        android:textColor="@color/primaryText"
                        android:layout_centerInParent="true"
                        android:visibility="visible"
                        android:gravity="center"/>
                </RelativeLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/storeroom_product_tag"/>
                    <TextView
                        android:id="@+id/product_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Now"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        tools:text="Product Name"
                        android:textStyle="bold"
                        android:textColor="@color/primaryText"/>

                    <!--<TextView-->
                    <!--android:id="@+id/price"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight=".45"-->
                    <!--tools:text="Price"-->
                    <!--android:textSize="20sp"-->
                    <!--android:textStyle="italic" />-->
                    <ImageView
                        android:id="@+id/shortList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:src="@drawable/ic_bookmark_border_white_24dp"
                        android:layout_gravity="end"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_outline"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_x_small"
                    android:paddingStart="@dimen/padding_small"
                    android:paddingEnd="@dimen/padding_small">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="ASK"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="0dp"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70 views"
                            android:textColor="@color/secondaryText"
                            android:textSize="11sp" />
                        <TextView
                            android:id="@+id/shortlists"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 shortlists"
                            android:textColor="@color/secondaryText"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>


                <!--<TextView-->
                <!--android:id="@+id/productDescription"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingBottom="10dp"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--tools:text="Product Description"-->
                <!--android:textSize="14sp" />-->

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="2dp"-->
                <!--android:layout_gravity="bottom">-->

                <!--<Button-->
                <!--android:id="@+id/shortList"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_margin="3dp"-->
                <!--android:layout_weight=".5"-->
                <!--android:background="@drawable/curvedradiusbutton_sr"-->
                <!--android:textSize="10dp"-->
                <!--android:text="Shortlist"-->
                <!--android:textColor="@color/white" />-->

                <!--<Button-->
                <!--android:id="@+id/sellerNumber"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_margin="3dp"-->
                <!--android:layout_weight=".5"-->
                <!--android:background="@drawable/curvedradiusbutton_sr"-->
                <!--android:textSize="10dp"-->
                <!--android:text="Call"-->
                <!--android:textColor="@color/white" />-->
                <!--</LinearLayout>-->
            </LinearLayout>
        </LinearLayout>
        <View
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.v7.widget.CardView>