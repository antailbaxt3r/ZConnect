<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_phonebook_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zconnect.zutto.zconnect.OpenUserDetail"
    tools:showIn="@layout/activity_open_user_detail"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/phonebook_details_progress_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTintMode="src_atop"
            android:backgroundTint="@color/secondaryText2"
            android:layout_gravity="center"/>
        <LinearLayout
            android:id="@+id/phonebook_details_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                android:padding="@dimen/padding_small"
                android:background="@color/colorPrimary">
                <TextView
                    android:id="@+id/contact_details_name_editText"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textColorHint="@color/secondaryText"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <com.facebook.drawee.view.SimpleDraweeView
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/contact_details_display_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/profile_avatar_circle"
                        fresco:actualImageScaleType="centerCrop"
                        fresco:roundAsCircle="true"
                        fresco:roundingBorderPadding="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <LinearLayout
                            android:id="@+id/ll_love_like"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:weightSum="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="0.33"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center">
                                <TextView
                                    android:id="@+id/point_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/point_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.8"
                                        android:gravity="center_vertical"
                                        android:minWidth="32dp"
                                        android:text="Points"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="0.33"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center">
                                <TextView
                                    android:id="@+id/like_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <ImageButton
                                        android:id="@+id/btn_like"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:src="@drawable/like" />
                                    <TextView
                                        android:id="@+id/like_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="10dp"
                                        android:layout_weight="1.8"
                                        android:gravity="center_vertical"
                                        android:minWidth="32dp"
                                        android:text="Likes"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="0.33"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:foregroundGravity="center">
                                <TextView
                                    android:id="@+id/love_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <ImageButton
                                        android:id="@+id/btn_love"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/heart" />

                                    <TextView
                                        android:id="@+id/love_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="10dp"
                                        android:layout_weight="1.8"
                                        android:gravity="center_vertical"
                                        android:minWidth="32dp"
                                        android:text="Loves"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <Button
                            android:id="@+id/user_type_content_phonebook_details"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="User Type"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/round_button_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="@dimen/margin_top_between_non_similar_views"
                            android:paddingStart="@dimen/button_padding_start_end"
                            android:paddingEnd="@dimen/button_padding_start_end"
                            style="?android:attr/borderlessButtonStyle"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"
                android:layout_marginTop="@dimen/margin_top_between_non_similar_views">
                <!--number-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:textColor="@color/primaryText"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:id="@+id/layoutPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_between_similar_views">
                        <TextView
                            android:id="@+id/contact_details_number_editText"
                            android:layout_width="0dp"
                            android:layout_weight="0.35"
                            android:layout_height="match_parent"
                            android:clickable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:maxLength="10"
                            android:textSize="16sp"
                            android:textColor="@color/primaryText" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="wrap_content"
                            android:gravity="end">
                            <ImageView
                                android:id="@+id/ib_call_contact_item"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_phone_outline_24dp"
                                android:visibility="visible" />
                        </LinearLayout>
                        <Button
                            android:id="@+id/show_cum_request_contact_button"
                            android:layout_width="0dp"
                            android:layout_weight="0.55"
                            android:layout_height="30dp"
                            android:textSize="12sp"
                            android:background="@drawable/round_button_primary"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:text="@string/show_contact"
                            android:textColor="@color/white"
                            android:paddingStart="@dimen/button_padding_start_end"
                            android:paddingEnd="@dimen/button_padding_start_end"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            style="?android:attr/borderlessButtonStyle" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_top_between_similar_views">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Whatsapp Number"
                        android:textColor="@color/primaryText"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/whatsapp_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/primaryText"
                        android:textSize="16sp"
                        android:layout_marginTop="@dimen/margin_top_between_similar_views"/>
                </LinearLayout>
                <!--email-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_top_between_similar_views">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/primaryText"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_between_similar_views">
                        <TextView
                            android:id="@+id/contact_details_email_editText"
                            android:layout_width="0dp"
                            android:layout_weight="0.9"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textColor="@color/primaryText"
                            android:textSize="16sp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="wrap_content"
                            android:gravity="end">
                            <ImageView
                                android:id="@+id/mailbutton"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_email_black_24dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--about-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_top_between_similar_views">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textStyle="bold"
                        android:textColor="@color/primaryText"/>
                    <TextView
                        android:id="@+id/contact_details_editText_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/primaryText"
                        android:textSize="16sp"
                        android:layout_marginTop="@dimen/margin_top_between_similar_views"/>
                </LinearLayout>

                <!--skills-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_between_similar_views"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skills"
                        android:textColor="@color/primaryText"
                        android:textStyle="bold"/>
                    <mabbas007.tagsedittext.TagsEditText
                        android:id="@+id/contact_details_editText_skills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_details_desc_text_input_layout"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Skills"
                        android:inputType="text"
                        android:text=""
                        android:clickable="false"
                        android:textSize="16sp"
                        android:textColor="@color/deepPurple500"
                        android:visibility="gone"
                        TagsEditText:allowSpaceInTag="true"
                        TagsEditText:tagsBackground="@drawable/square"
                        TagsEditText:tagsCloseImageLeft="@drawable/dot"
                        TagsEditText:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
                        TagsEditText:tagsTextColor="@color/deeppurple700"
                        TagsEditText:tagsTextSize="@dimen/defaultTagsTextSize"
                        android:layout_marginTop="@dimen/margin_top_between_similar_views" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
</ScrollView>