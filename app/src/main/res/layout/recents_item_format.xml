<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    android:background="@drawable/roundradius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp" >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/featureCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_circle" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatarCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/avatar_circle"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/postedBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/link"
                        android:textStyle="bold"
                        android:text="Somebody"/>

                    <TextView
                        android:id="@+id/postConjunction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondaryText"
                        android:text=" posted a "/>

                    <TextView
                        android:id="@+id/post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/link"
                        android:textStyle="bold"
                        android:text="Post"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/postTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unkown time ago"
                        android:textColor="@color/secondaryText"
                        android:textSize="11sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp">
            <LinearLayout
                android:id="@+id/cabpoolRecentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cabpoolRecentItem_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Source"
                        android:textColor="@color/primaryText"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" to "
                        android:textColor="@color/primaryText"/>
                    <TextView
                        android:id="@+id/cabpoolRecentItem_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Destination"
                        android:textColor="@color/primaryText"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eventsRecentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:id="@+id/eventsRecentItem_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event name"
                        android:textColor="@color/primaryText"/>
                    <TextView
                        android:id="@+id/eventsRecentItem_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Date"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/primaryText"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/eventsRecentItem_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryText"
                    android:layout_marginBottom="5dp"/>
                <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/eventsRecentItem_image"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    fresco:viewAspectRatio="1.33"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/storeroomRecentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:id="@+id/storeroomRecentItem_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product name"
                        android:textColor="@color/primaryText"/>
                    <TextView
                        android:id="@+id/storeroomRecentItem_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/primaryText"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/storeroomRecentItem_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryText"
                    android:layout_marginBottom="5dp"/>
                <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/storeroomRecentItem_image"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    fresco:viewAspectRatio="1.33"/>
            </LinearLayout>

        </LinearLayout>

        <!--old ui-->
        <TextView
            android:id="@+id/recentname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal600"
            android:maxLines="1"
            android:padding="6dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="Name"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/recents_image"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".25"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/descTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".75"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recentdesc"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="Desc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/recentdesc">

                    <TextView
                        android:id="@+id/featurename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:paddingEnd="10dp"
                        android:paddingStart="0dp"
                        android:textColor="@color/teal900"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="Feature" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>