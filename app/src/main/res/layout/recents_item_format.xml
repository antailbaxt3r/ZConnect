<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="0dp"
    android:layout_marginStart="0dp"

    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="0dp"
        android:paddingTop="@dimen/padding_x_small"
        android:paddingBottom="@dimen/padding_x_small"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding_x_small"
            android:paddingBottom="@dimen/padding_x_small"
            android:layout_marginStart="0dp"
            android:weightSum="1"
            android:id="@+id/prePostDetails">
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatarCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:background="@drawable/avatar_circle"
                fresco:roundAsCircle="true" />
            <LinearLayout
                android:id="@+id/main_layout"
                android:layout_width="0dp"
                android:layout_weight=".9"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_small">
                <TextView
                    android:id="@+id/sentence_recents_item_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="somebody did this"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexWrap="wrap"
                    app:alignItems="stretch"
                    app:alignContent="stretch">
                    <TextView
                        android:id="@+id/postedBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/link"
                        android:textStyle="bold"
                        android:text="Somebody"/>

                    <TextView
                        android:id="@+id/postConjunction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondaryText"
                        android:text=" posted a "/>

                    <TextView
                        android:id="@+id/post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/link"
                        android:textStyle="bold"
                        android:text="Post"/>
                </com.google.android.flexbox.FlexboxLayout>
                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->
                    <!---->
                <!--</LinearLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/layout_feature_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/avatarCircle"
                        android:layout_alignEnd="@+id/avatarCircle">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/featureCircle"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            android:id="@+id/recents_featIcon"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_home_white_18dp"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/postTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unknown time ago"
                        android:textColor="@color/secondaryText"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_x_small"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/delete_layout"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/recents_post_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    android:background="@color/transparent"
                    android:tint="@color/icon_color"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/pollFormat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:text="@string/question"
                    android:id="@+id/poll_question"/>

                <!--CHANGE COLOR OF MOST VOTED POLL TO deepPurple500-->
                <!--AND LEAVE OTHERS AT deeppurple200-->

                <!--OPTION A-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:id="@+id/optionA_Layout">

                    <!--CHANGE VISIBILITY OF THE poll_results LINEARLAYOUT-->
                    <!--TO VISIBLE ON CLICK FOR ALL OPTIONS-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:id="@+id/poll_results_optionA"
                        android:visibility="invisible">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/left_rounded_corner_full_purple_border"
                            android:id="@+id/optionA_result_success"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"/>
                        <!--change this to required successFraction-->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/right_rounded_corner_purple_border"
                            android:id="@+id/optionA_result_failure"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"/>
                        <!--change layout_weight to (1 - successFraction)-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <!--CHANGE textColor OF BOTH TEXTVIEWs TO WHITE-->
                        <!--ON CLICK OF THE OPTION FOR ALL OPTIONS-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A."
                            android:textStyle="bold"
                            android:textColor="@color/secondaryText"
                            android:textSize="20sp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="10dp"
                            android:id="@+id/optionA_placeHolder"
                            android:layout_weight="9"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Option A"
                            android:textColor="@color/secondaryText"
                            android:textSize="20sp"
                            android:layout_margin="7dp"
                            android:id="@+id/optionA_option_text"
                            android:layout_weight="1"/>
                    </LinearLayout>


                </FrameLayout>

                <!--OPTION B-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:id="@+id/optionB_Layout">

                    <!--CHANGE VISIBILITY OF THE poll_results LINEARLAYOUT-->
                    <!--TO VISIBLE ON CLICK FOR ALL OPTIONS-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:id="@+id/poll_results_optionB"
                        android:visibility="invisible">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/left_rounded_corner_full_purple_border"
                            android:id="@+id/optionB_result_success"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"/>
                        <!--change this to required successFraction-->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/right_rounded_corner_purple_border"
                            android:id="@+id/optionB_result_failure"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"/>
                        <!--change layout_weight to (1 - successFraction)-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!--CHANGE textColor OF BOTH TEXTVIEWs TO WHITE-->
                        <!--ON CLICK OF THE OPTION FOR ALL OPTIONS-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="B."
                            android:textStyle="bold"
                            android:textColor="@color/secondaryText"
                            android:textSize="20sp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="10dp"
                            android:id="@+id/optionB_placeHolder"
                            android:layout_weight="9"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Option B"
                            android:textColor="@color/secondaryText"
                            android:textSize="20sp"
                            android:layout_margin="7dp"
                            android:id="@+id/optionB_option_text"
                            android:layout_weight="1"/>
                    </LinearLayout>


                </FrameLayout>

                <!--OPTION C-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:id="@+id/optionC_Layout">

                    <!--CHANGE VISIBILITY OF THE poll_results LINEARLAYOUT-->
                    <!--TO VISIBLE ON CLICK FOR ALL OPTIONS-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:id="@+id/poll_results_optionC"
                        android:visibility="invisible">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/left_rounded_corner_full_purple_border"
                            android:id="@+id/optionC_result_success"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"/>
                        <!--change this to required successFraction-->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/right_rounded_corner_purple_border"
                            android:id="@+id/optionC_result_failure"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"/>
                        <!--change layout_weight to (1 - successFraction)-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <!--CHANGE textColor OF BOTH TEXTVIEWs TO WHITE-->
                        <!--ON CLICK OF THE OPTION FOR ALL OPTIONS-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="C."
                            android:textStyle="bold"
                            android:textColor="@color/secondaryText"
                            android:textSize="20sp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:layout_marginStart="10dp"
                            android:id="@+id/optionC_placeHolder"
                            android:layout_weight="9"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Option C"
                            android:layout_margin="7dp"
                            android:textColor="@color/secondaryText"
                            android:textSize="20sp"
                            android:id="@+id/optionC_option_text"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/youtubelinklinearlayout"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/webvideo_layout"
                    android:layout_width="250dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/img_thumnail"
                        android:layout_width="250dp"
                        android:layout_height="180dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY" />

                    <!-- <ImageView
                        android:id="@+id/iv_play_pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/mr_media_play_dark" /> -->
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bannerRecentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/bannerRecentItem_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fresco:actualImageScaleType="centerCrop"
                        android:background="@drawable/banner_recent_item"/>
                    <FrameLayout
                        android:id="@+id/bannerRecentItem_link_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:visibility="invisible">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/banner_recent_item_link_bar"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/padding_start_end_small"
                            android:paddingEnd="@dimen/padding_start_end_small"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.9"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:text="@string/banner_link"/>
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_chevron_right_white_24dp"/>
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/forumsRecentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_x_small"
                android:paddingBottom="@dimen/padding_x_small"
                android:visibility="gone"
                android:paddingStart="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small">
                <TextView
                    android:id="@+id/forum_name_with_category_sentence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/primaryText"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/messagesRecentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/messagesRecentItem_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Message goes here"
                        android:textColor="@color/primaryText"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:maxLines="7"/>
                </LinearLayout>

                <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="Post Image"
                    fresco:viewAspectRatio="1.33"
                    android:id="@+id/messagesRecentItem_image"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>
                <View
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="1dp"
                    android:background="@color/horizontalLine"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-5dp">
                    <RelativeLayout
                        android:id="@+id/messagesRecentItem_like_layout"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/padding_small">
                        <TextView
                            android:id="@+id/like_text_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@color/icon_color"/>
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/margin_x_small"
                            android:id="@+id/like_image_status"
                            android:layout_toRightOf="@+id/like_text_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/outline_thumb_up_alt_white_24"
                            android:tint="@color/icon_color"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/messagesRecentItem_comment_layout"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/padding_small">
                        <TextView
                            android:id="@+id/comment_text_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:text="123"
                            android:textColor="@color/icon_color"
                            android:visibility="gone"/>
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/margin_x_small"
                            android:id="@+id/comment_image_status"
                            android:layout_toEndOf="@+id/comment_text_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/outline_mode_comment_white_24"
                            android:tint="@color/icon_color"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/infoneRecentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small">
                    <TextView
                        android:id="@+id/infone_name_with_category_sentence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/primaryText"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/noticesRecentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/noticesRecentItem_image"
                    android:layout_width="0dp"
                    android:layout_weight="0.34"
                    android:layout_height="wrap_content"
                    app:viewAspectRatio="0.85"
                    app:srcCompat="@drawable/addimage"/>
                <TextView
                    android:id="@+id/noticesRecentItem_text"
                    android:layout_width="0dp"
                    android:layout_weight="0.66"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/primaryText"
                    android:layout_marginStart="@dimen/margin_small" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cabpoolRecentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <TextView
                        android:id="@+id/cabpoolRecentItem_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Source"
                        android:textSize="16sp"
                        android:textColor="@color/primaryText"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" to "
                        android:textSize="16sp"
                        android:textColor="@color/primaryText"/>
                    <TextView
                        android:id="@+id/cabpoolRecentItem_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Destination"
                        android:textSize="16sp"
                        android:textColor="@color/primaryText"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <TextView
                        android:id="@+id/cabpoolRecentItem_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="16sp"
                        android:textColor="@color/primaryText"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=", "
                        android:textSize="16sp"
                        android:textColor="@color/primaryText" />
                    <TextView
                        android:id="@+id/cabpoolRecentItem_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textSize="16sp"
                        android:textColor="@color/primaryText" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/secondaryText"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"/>
