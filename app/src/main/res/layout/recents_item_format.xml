                    android:id="@+id/recents_featIcon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_home_white_18dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>
