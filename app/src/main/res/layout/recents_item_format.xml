<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/roundradius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recentname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/recents_image"
            android:background="@color/teal600"
            android:padding="10dp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/recents_image"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_below="@+id/featurename"
                android:layout_weight=".6"
                android:padding="5dp"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/descTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/recentdesc"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:padding="8dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/recentdesc">


                    <TextView
                        android:id="@+id/featurename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:paddingRight="10dp"
                        android:text="Feature"
                        android:textColor="@color/teal900"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>