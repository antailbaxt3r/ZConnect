<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/roundradius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recentname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal600"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/recents_image"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight=".6"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/descTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recentdesc"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:ellipsize="end"
                    android:maxLines="8"
                    android:padding="8dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Desc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/recentdesc">

                    <TextView
                        android:id="@+id/featurename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:paddingEnd="10dp"
                        android:paddingStart="0dp"
                        android:textColor="@color/teal900"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="Feature" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>