<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_10">

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:background="@color/placeholder_bg"
        android:id="@+id/photo_in_forum"/>
    <View
        android:layout_width="200dp"
        android:layout_height="@dimen/placeholder_text_height"
        android:id="@+id/name_in_forum"
        android:layout_marginTop="10dp"
        android:background="@color/placeholder_bg"
        android:layout_toRightOf="@+id/photo_in_forum"/>
    <View
        android:layout_width="250dp"
        android:layout_height="@dimen/placeholder_text_height"
        android:id="@+id/msg_in_forum"
        android:background="@color/placeholder_bg"
        android:layout_below="@id/name_in_forum"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/photo_in_forum"/>


</RelativeLayout>