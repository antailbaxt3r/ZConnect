<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zconnect.zutto.zconnect.InfoneAddContactActivity"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_add_infone_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_dashed_border"
        android:layout_gravity="center_horizontal"
        fresco:actualImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        fresco:roundingBorderPadding="2dp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/name_et_infone_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        android:inputType="text"
        app:met_textColor="@color/primaryText"
        app:met_textColorHint="@color/secondaryText"
        android:layout_marginTop="10dp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/phone_et_infone_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="phone mobile"
        android:inputType="number"
        app:met_textColor="@color/primaryText"
        app:met_textColorHint="@color/secondaryText"
        android:layout_marginTop="10dp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/phone2_et_infone_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="mobile official"
        android:inputType="number"
        app:met_textColor="@color/primaryText"
        app:met_textColorHint="@color/secondaryText"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_save_infone_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/infone"
        android:layout_marginTop="10dp"/>

</LinearLayout>
