<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationImage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_app_bar_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="180dp"
                    android:maxHeight="200dp"
                    android:background="@drawable/dashed_border"
                    android:contentDescription="Product image"
                    android:scaleType="fitCenter"
                    android:layout_margin="7dp"/>

                <EditText
                    android:id="@+id/notif_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:textSize="18sp"
                    android:hint="Notification title"
                    android:textColor="@color/secondaryText"
                    android:textColorHint="@color/secondaryText" />


                <EditText
                    android:id="@+id/notif_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:textSize="18sp"
                    android:hint="Notification message"
                    android:textColor="@color/secondaryText"
                    android:textColorHint="@color/secondaryText" />

                <EditText
                    android:id="@+id/notif_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:hint="Notification URL"
                    android:textSize="18sp"
                    android:textColor="@color/secondaryText"
                    android:textColorHint="@color/secondaryText" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin ="35dp"
                    android:background="@drawable/round_button_primary"
                    android:text="Send"
                    android:textColor="#ffff" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>