<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/margin_small">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pool_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shri Kaashi Dairy"
            android:textSize="14sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        <TextView
            android:id="@+id/delivery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery at 8:30 PM"
            android:layout_marginTop="@dimen/margin_x_small"
            android:textSize="12sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
        <TextView
            android:id="@+id/order_place_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Placed on May 13 2019"
            android:layout_marginTop="@dimen/margin_x_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/margin_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="@dimen/margin_small"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/order_status_circle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_x_small"
                    android:text="Order Placed"
                    android:textSize="12sp"
                    android:textColor="@color/secondaryText2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/order_status_circle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_x_small"
                    android:text="Out for delivery"
                    android:textSize="12sp"
                    android:textColor="@color/secondaryText2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/order_status_circle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_x_small"
                    android:text="Order Received"
                    android:textSize="12sp"
                    android:textColor="@color/secondaryText2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:id="@+id/ordered_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.130/-"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
</RelativeLayout>