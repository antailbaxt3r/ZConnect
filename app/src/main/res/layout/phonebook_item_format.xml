<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/border"
    android:padding="12dp">

    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/phonebook_item_format_image"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:actualImageScaleType="centerCrop"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/phonebook_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/phonebook_item_format_image"
        android:padding="10dp"
        android:text="NAME"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/colon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/phonebook_name_textview"
        android:padding="10dp"
        android:text=":"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/phonebook_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/colon1"

        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/phonebook_number_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonebook_name_textview"
        android:layout_toRightOf="@+id/phonebook_item_format_image"
        android:padding="10dp"
        android:text="NUMBER"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/colon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phonebook_name_textview"
        android:layout_toRightOf="@+id/phonebook_number_textview"
        android:padding="10dp"
        android:text=":"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/phonebook_number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonebook_name1"
        android:layout_toRightOf="@+id/colon2"

        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/callbutton"
        android:src="@drawable/ic_phone_black_24dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/phonebook_item_format_image"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
