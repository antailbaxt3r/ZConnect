<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:background="@drawable/round_button_primary"
    android:backgroundTint="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a link"
        android:textSize="21sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/deepPurple500"/>


    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_profile_infone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/deepPurple500"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        android:background="@drawable/ic_outline_store_36"
        fresco:actualImageScaleType="centerCrop"
        fresco:roundAsCircle="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter details:"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/deepPurple500"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"/>
        <EditText
            android:id="@+id/add_link_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link:"/>
        <EditText
            android:id="@+id/add_link_link"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/round_button_primary"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:padding="@dimen/margin_small8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/add_link_request_btn"
            android:text="REQUEST"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/add_link_cancel_btn"
            android:textColor="@color/deepPurple500"
    style="@style/Widget.AppCompat.Button.Borderless"            android:layout_alignParentEnd="true"
            android:text="CANCEL" />

    </LinearLayout>



</LinearLayout>

