<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small"
    android:layout_margin="@dimen/margin_x_small">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_dot"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle_30dp"
            android:backgroundTint="@color/primaryText"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_name_cum_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Butter Naan X 5"
            android:layout_toEndOf="@+id/item_dot"
            android:layout_marginStart="@dimen/margin_small"
            android:textColor="@color/primaryText"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_row_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.300/-"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>