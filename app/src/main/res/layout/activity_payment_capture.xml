<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pools.PaymentCaptureActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_app_bar_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_medium">
        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_marginTop="56dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/paymentstatus_image"
                android:layout_gravity="center"
                android:background="@drawable/ic_check_green_120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/paymentstatus_text"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:text="Payment Sucessful!"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/total_pay_amount"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:text="Rs.300/-"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/next_steps_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:text="Next steps to be followed:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:text="1. Click on NEXT to view your order details.\n2. Click on CHAT to enter Forum where you will get updates of the order form the shop.\n3. You can view all your orders in My Orders.\n4. You can access your chat later from Forums as well."/>
            </LinearLayout>
        </LinearLayout>

        <include
            android:visibility="gone"
            layout="@layout/layout_progress_bar" />
        <ProgressBar
            android:id="@+id/next_btn_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_small"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/chat_btn"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="CHAT"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/border_outline"
                android:layout_margin="@dimen/margin_x_small"/>
            <Button
                android:id="@+id/next_btn"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:background="@drawable/border_fill"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin_x_small"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>