<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:orientation="vertical"
    app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/forums_group_icon_row_forums_categories_not_joined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/forum_circle"
                app:actualImageScaleType="centerCrop"
                app:roundAsCircle="true"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:id="@+id/forums_group_title_row_forums_categories_not_joined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/forums_group_icon_row_forums_categories_not_joined">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.85"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/cat_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cat Name"
                        android:textColor="@color/primaryText"
                        android:textSize="18sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp">
                            <TextView
                                android:id="@+id/forums_cat_last_message_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Username :"
                                android:textColor="@color/secondaryText"/>
                            <TextView
                                android:layout_marginStart="5dp"
                                android:id="@+id/forums_cat_last_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="latest text"
                                android:textColor="@color/secondaryText"
                                android:ellipsize="end"
                                android:maxLines="1"/>
                            <TextView
                                android:id="@+id/forums_cat_last_message_timestamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15:30 PM"
                                android:textColor="@color/secondaryText"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <ImageButton
                    android:id="@+id/joinCategory"
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_add_circle_outline_white_36"
                    android:background="@color/transparent"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondaryText2"/>
    </LinearLayout>
</android.support.v7.widget.CardView>