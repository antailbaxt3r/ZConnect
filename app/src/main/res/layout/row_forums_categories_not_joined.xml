<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:orientation="vertical"
    app:cardElevation="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <FrameLayout
                android:id="@+id/layout_forums_group_icon_row_forums_categories_not_joined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/forums_group_icon_row_forums_categories_not_joined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/forum_circle"
                    app:actualImageScaleType="centerCrop"
                    app:roundAsCircle="true" />
                <ImageView
                    android:id="@+id/default_forums_group_icon_row_forums_categories_not_joined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_people_white_36"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/forums_group_title_row_forums_categories_not_joined"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_toRightOf="@+id/layout_forums_group_icon_row_forums_categories_not_joined"
                android:layout_marginStart="@dimen/margin_small"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cat_name"
                        android:layout_width="0dp"
                        android:layout_weight="0.72"
                        android:layout_height="wrap_content"
                        android:text="Cat Name"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/primaryText"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:id="@+id/forums_cat_last_message_timestamp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.28"
                        android:text="15:30 PM"
                        android:textColor="@color/secondaryText"
                        android:textSize="12sp"
                        android:gravity="end"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/forums_cat_not_joined_last_message_with_username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:textColor="@color/secondaryText"
                        android:ellipsize="end"
                        style="@style/autoscroll"
                        android:maxLines="1"
                        android:textSize="14sp" />
                    <Button
                        android:id="@+id/joinCategory"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="24dp"
                        android:src="@drawable/outline_add_circle_outline_white_36"
                        android:background="@drawable/round_button_simple"
                        android:text="Join"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_gravity="end" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondaryText2"/>
    </LinearLayout>
</android.support.v7.widget.CardView>