<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:orientation="vertical"
    app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/create_forum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <FrameLayout
                android:id="@+id/create_icon_row_forums_sub_categories_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/forum_circle"
                    android:backgroundTint="@color/colorHighlight"
                    app:actualImageScaleType="centerCrop"
                    app:roundAsCircle="true"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_group_add_white_36"/>
            </FrameLayout>
            <TextView
                android:layout_toRightOf="@+id/create_icon_row_forums_sub_categories_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_forum"
                android:textColor="@color/primaryText"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondaryText2" />
    </LinearLayout>
</android.support.v7.widget.CardView>