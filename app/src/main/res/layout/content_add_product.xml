<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
    android:id="@+id/content_add_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zconnect.zutto.zconnect.AddProduct"
    tools:showIn="@layout/activity_add_product">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_filled_2"
        android:minHeight="200dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/addimage" />

    <EditText
        android:id="@+id/name"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_filled_2"
        android:ems="10"
        android:hint="Product name"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/priceNegotiable"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_filled_2"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:padding="10dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/skillsTagsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:paddingEnd="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingStart="6dp"
            android:background="@drawable/border_filled_2"
            >
            <mabbas007.tagsedittext.TagsEditText
                android:id="@+id/skillsTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_edit_email_text_input_layout"
                android:hint="Product Tags"
                android:inputType="text"
                android:text=""
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/white"
                TagsEditText:allowSpaceInTag="true"
                TagsEditText:tagsCloseImageRight="@drawable/tag_close"
                TagsEditText:tagsBackground="@drawable/square"
                TagsEditText:tagsCloseImageLeft="@drawable/dot"
                TagsEditText:tagsTextColor="@color/black"
                TagsEditText:tagsTextSize="@dimen/defaultTagsTextSize"
                TagsEditText:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
                />
        </android.support.design.widget.TextInputLayout>

        <com.zconnect.zutto.zconnect.CustomSpinner
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/skillsTagsLayout"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_filled_2"
        android:entries="@array/categories"
        android:padding="10dp"
        android:prompt="@string/category_prompt"
        android:spinnerMode="dialog" />

    <EditText
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/description"
        android:layout_below="@+id/imageButton"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/name"
        android:background="@drawable/border_filled_2"
        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <CheckBox
        android:id="@+id/priceNegotiable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price negotiable"
        android:layout_below="@+id/price"
        android:layout_toEndOf="@+id/name"
        android:checked="true"/>

    <EditText
        android:id="@+id/phoneNo"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/categories"
        android:layout_below="@+id/categories"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/border_filled_2"
        android:hint="Phone No."
        android:inputType="phone"
        android:maxLength="10"
        android:padding="10dp" />

</RelativeLayout>
</ScrollView>