<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zconnect.zutto.zconnect.AddProduct"
    tools:showIn="@layout/activity_add_product">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_filled_2"
        android:padding="10dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/addimage"
        android:contentDescription="Product image"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/border_filled_2"
        android:ems="10"
        android:hint="Product name"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight=".6"
            android:background="@drawable/border_filled_2"
            android:ems="10"
            android:hint="Price"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/priceNegotiable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight=".4"
            android:checked="true"
            android:ems="10"
            android:text="Negotiable"
            android:textSize="16sp" />
    </LinearLayout>


    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_filled_2"
        android:ems="10"
        android:hint="Product description"
        android:inputType="textMultiLine"
        android:padding="10dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/skillsTagsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_filled_2"
        android:clickable="false"
        android:paddingEnd="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingStart="6dp">
        <mabbas007.tagsedittext.TagsEditText
            android:id="@+id/skillsTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_edit_email_text_input_layout"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Product Tags (Optional)"
            android:inputType="textFilter"
            android:text=""
            android:textColor="@android:color/black"
            TagsEditText:allowSpaceInTag="true"
            TagsEditText:tagsBackground="@drawable/square"
            TagsEditText:tagsCloseImageLeft="@drawable/dot"
            TagsEditText:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
            TagsEditText:tagsCloseImageRight="@drawable/tag_close"
            TagsEditText:tagsTextColor="@color/black"
            TagsEditText:tagsTextSize="@dimen/defaultTagsTextSize"
            />

        <requestFocus />
    </android.support.design.widget.TextInputLayout>


    <com.zconnect.zutto.zconnect.CustomSpinner
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_filled_2"
        android:entries="@array/categories"
        android:padding="10dp"
        android:prompt="@string/category_prompt"
        android:spinnerMode="dialog" />

</LinearLayout>

</ScrollView>