<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zconnect.zutto.zconnect.ForumsPeopleList"
    tools:showIn="@layout/activity_forums_people_list">

    <ProgressBar
        android:id="@+id/content_forums_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/content_forum_prople_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clipToPadding="false"
        android:layout_above="@id/join"
        android:scrollbars="vertical"/>
    <Button
        android:id="@+id/join"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/single_line_btn_min_width"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_button_simple"
        android:backgroundTint="@color/colorHighlight"
        android:text="Join"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/margin_small"/>

</RelativeLayout>
