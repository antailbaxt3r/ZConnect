<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:orientation="vertical"
    app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <FrameLayout
                android:id="@+id/layout_forums_group_icon_row_forums_sub_categories_joined"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/forums_group_icon_row_forums_sub_categories_joined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/forum_circle"
                    app:actualImageScaleType="centerCrop"
                    app:roundAsCircle="true" />
                <ImageView
                    android:id="@+id/default_forums_group_icon_row_forums_sub_categories_joined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_people_white_36"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/forum_details_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:weightSum="1"
                android:layout_toRightOf="@+id/layout_forums_group_icon_row_forums_sub_categories_joined"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_small"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cat_name"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:layout_height="wrap_content"
                        android:text="Cat Name"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/primaryText"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:id="@+id/forums_cat_last_message_timestamp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.28"
                        android:text="03:33 PM"
                        android:textColor="@color/secondaryText"
                        android:textSize="12sp"
                        android:gravity="end"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/forums_cat_last_message_with_username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:textColor="@color/secondaryText"
                        android:ellipsize="end"
                        style="@style/autoscroll"
                        android:maxLines="1"
                        android:textSize="14sp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:id="@+id/layout_forums_unseen_messages">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.facebook.drawee.view.SimpleDraweeView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/unread_msg_circle"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/forums_unseen_messages"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="11sp" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondaryText2" />
    </LinearLayout>
</android.support.v7.widget.CardView>